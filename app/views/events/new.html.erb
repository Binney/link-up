<% provide(:title, 'New event') %>
<% provide(:site_section, 2) %>
<h1>New event</h1>
<div class="row">
  <div class="span6 offset3">
    <%= nested_form_for(@event) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label 'Where?' %>
      <%= f.collection_select( :venue_id, @venues, :id, :name ) %>

      <%= f.fields_for :timings do |timing_form| %>
        <%= timing_form.label :start_time, "Start time:" %>
        <%= timing_form.datetime_select :start_time, :discard_year => true, :minute_step => 5 %>
        <br>
        <%= timing_form.label :end_time, "End time:" %>
        <%= timing_form.datetime_select :end_time, :discard_year => true, :discard_month => true, :discard_day => true, :minute_step => 5 %>
        <%= timing_form.link_to_remove "Remove" %>
      <% end %>

      <%= f.link_to_add "Add session", :timings %><br>

      <%= f.label :cost, "Cost (number in pence - this is for searching):" %>
      <%= f.text_field :cost %>

      <%= f.label :cost_details %>
      <%= f.text_field :cost_details, placeholder: "e.g. Â£3 for one visit, Â£10 membership..." %>

      <%= f.label :gender %>
      <%= f.select :gender, [['All'],['Female'], ['Male']] %>

      <%= f.label :contact %>
      <%= f.text_field :contact %>

      <%= f.label :website %>
      <%= f.text_field :website %>

      <%= f.submit "Create event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
