<%= search_form_for @search do |f| %>
  <%= f.label :tags_name_or_description_or_name_cont, "Search:" %>
  <%= f.text_field :tags_name_or_description_or_name_cont, value: (params[:q][:tags_name_or_name_or_description_cont] if params[:q]) %>
  <%= f.label :venue_name_cont, "Venue" %>
  <%= f.text_field :venue_name_cont %>
  <%= f.label :timings_day_eq, "Day" %>
  <%= f.select :timings_day_eq, [['Any', nil], ['Mondays', 1], ['Tuesdays', 2], ['Wednesdays', 3], ['Thursdays', 4], ['Fridays', 5], ['Saturdays', 6], ['Sundays', 0]] %>
  <%= f.label :cost_lteq, "Cost" %>
  <%= f.select :cost_lteq, [['Any', nil], ['Free', 0], ['<£5', 5], ['<£10', 10]] %>
  <%= f.label :gender_cont, "Gender" %>
  <%= f.select :gender_cont, [['All', 'All'], ['Female only', 'Female'], ['Male only', 'Male']] %>

  <!-- Also fields for: time (ie start_time.hour), location (ie list in order of proximity to postcode/address entered) -->
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
