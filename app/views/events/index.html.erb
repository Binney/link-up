<% provide(:title, 'All events') %>
<% if @number==nil
     str = ""
   else
     str = "at "+Venue.find(@number).name
   end %>
<h1>All events <% str %></h1>

<% if @events.any? %>

  <%= will_paginate %>

  <ul class="events">
    <%= render @events, size: 52 %>
  </ul>

  <%= will_paginate %>

<% else %>

  <p>No events listed for this venue.</p>

<% end %>
