<% provide(:title, 'Create logbook entry') %>
<% provide(:site_section, 2) %>
<h1>New logbook entry</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@logbook_entry) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label 'Event attended' %>
      <%= f.collection_select( :event_id, @events, :id, :name ) %>

      <%= f.label :mentor_meeting, 'Was it a mentor meeting?' %>
      <%= f.check_box :mentor_meeting %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :date %>
      <%= f.datetime_select :date %>

      <%= f.submit "Add to logbook!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
