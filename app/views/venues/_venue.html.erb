<li>
  <%= avatar_for venue %>
  <% if signed_in? && organiser?(venue) %>
    <b><%= link_to venue.name, venue %></b>
  <% else %>
    <%= link_to venue.name, venue %>
  <% end %>
  <% if admin? || organiser?(venue) %>
    | <%= link_to "delete", venue, method: :delete,
                                  data: { confirm: "This will delete all associated events!\nYou sure?" } %>
  <% end %>
</li>
