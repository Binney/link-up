<% provide(:title, 'Create news article') %>
<% provide(:site_section, 2) %>
<h1>New article</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.submit "Post!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
