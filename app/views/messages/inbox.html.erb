<% provide(:title, "Inbox") %>
<% provide(:site_section, "3") %>
<div id="tabs">
  <ul>
    <li><a href="#inbox"><span>Inbox</span></a></li>
    <li><a href="#sent"><span>Sent</span></a></li>
  </ul>
  <div id="inbox">
    <div id="top_page">
      <%= render 'received' %>
    </div>
  </div>

  <div id="sent">
    <div id="bottom_page">
      <%= render 'sent' %>
    </div>
  </div>
</div>
  <p><%= button_to "New message", new_message_path, method: 'get', class: "btn btn-primary" %></p>
<% unless @message.nil? %>
  <div class="preview">
    <%= render @message %>
  </div>
<% end %>
