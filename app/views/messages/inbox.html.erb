<div id="tabs">
  <ul>
    <li><a href="#inbox"><span>Inbox</span></a></li>
    <li><a href="#sent"><span>Sent</span></a></li>
  </ul>
  <p><%= link_to "New message", new_message_path %></p>
  <!-- New message should appear in entire new page - not simply at the bottom of inbox. -->
  <div id="inbox">
    <div id="top_page">
      <%= render 'received' %>
    </div>
  </div>

  <div id="sent">
    <div id="bottom_page">
      <%= render 'sent' %>
    </div>
  </div>
</div>

<div class="message">
  <%= render @message %>
</div>
