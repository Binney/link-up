<% provide(:title, "New message") %>
<% provide(:site_section, "3") %>
<%= form_for(current_user.messages.build(sender_id: current_user.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.hidden_field :sender_id %>
    <%= f.text_field :subject, placeholder: "Subject" %>
    <%= f.text_area :message, placeholder: "Compose new message..." %>
    <%= f.label :receiver_id, "To:" %>
    <%= f.text_field :receiver_id %>
  </div>
  <%= f.submit "SEND", class: "btn btn-primary" %>
<% end %>
