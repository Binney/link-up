<%= form_for(current_user.sent_messages.build(receiver_id: user_id, sender_id: current_user.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div><%= f.hidden_field :receiver_id %>
  <%= f.hidden_field :sender_id %></div>
  <div class="field">
    <% if subject[0,3].eql?("Re:") %>
      <%= f.text_field :subject, value: subject.to_s %>
    <% else %>
      <%= f.text_field :subject, value: "Re: "+subject.to_s %>
    <% end %>
    <br>
    <%= f.text_area :message, placeholder: "Compose new message..." %>
  </div>
  <%= f.submit "SEND", class: "btn btn-primary" %>
<% end %>
