<div id="tabs">
  <ul>
    <li><a href="#inbox"><span>Inbox</span></a></li>
    <li><a href="#sent"><span>Sent</span></a></li>
  </ul>
  <p><%= link_to "New message", new_message_path %></p>
  <!-- New message should appear in entire new page - not simply at the bottom of inbox. -->
  <div id="inbox">
    <% if @received_messages.any? %>
      <div class="message_table">
        <col span="2" style="font-size:25px;"/>
        <%= table_for(@received_messages) do |t| %>
          <%= t.body do |message| %>
            <%= t.r do %>
              <%= t.d(h(message.created_at.to_s(:day_week_month))) %>
              <%= t.d(h(User.find(message.sender_id).name)) %>
              <%= t.d(h(message.subject)) %>
              <%= t.d(h(link_to 'VIEW', message, method: :show)) %>
              <%= t.d(h(link_to "DELETE", message, method: :delete, data: { confirm: "You sure?" } )) %>
            <% end %>
          <% end %>
        <% end %>
      </div>
 <%= page_entries_info @received_messages %>
      <%= will_paginate @received_messages, :page_links => false %>
    <% else %>
      <p>No messages.</p>
    <% end %>
  </div>

  <div id="sent">
    <% if @sent_messages.any? %>
      <div class="message_table">
      <%= table_for(@sent_messages) do |t| %>
        <%= t.body do |message| %>
          <%= t.r do %>
            <%= t.d(h(message.created_at.to_s(:day_week_month))) %>
            <%= t.d(h(User.find(message.sender_id).name)) %>
            <%= t.d(h(message.subject)) %>
            <%= t.d(h(link_to 'VIEW', '#')) %>
            <%= t.d(h(link_to "DELETE", message, method: :delete, data: { confirm: "You sure?" } )) %>
          <% end %>
        <% end %>
      <% end %>
      </div>
      <%= will_paginate @sent_messages, :page_links => false %>
    <% else %>
      <p>No messages.</p>
    <% end %>
  </div>
</div>
<div class="message">
  <%= render @message %>
</div>
