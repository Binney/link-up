<% provide(:title, "New message") %>
<% provide(:site_section, "3") %>
<%= form_for(current_user.messages.build(sender_id: current_user.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.hidden_field :sender_id %>
    <%= f.label :receiver_id, "To:" %>
    <%= f.collection_select :receiver_id, @users, :id, :name, selected: params[:recipient] %>
    <%= f.text_field :subject, placeholder: "Subject" %>
    <%= f.text_area :message, placeholder: "Compose new message...", class: "message-body" %>
  </div>
  <%= f.submit "SEND", class: "btn btn-primary" %>
<% end %>
