<% provide(:title, @user.name) %>
<% provide(:site_section, "4") %>
<div class="row">
  <aside class="span4">
    <section>
      <%= button_to "Back to users", users_path, class: 'btn', method: 'get' %>
      <h1>
        <%= avatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if current_user.role == "admin" %>
        <%= @user.email %><br>
      <% end %>
      <%= link_to "View logbook", user_logbook_entries_path(@user) %><br>
      <%= link_to "Send a message", new_message_path(recipient: @user.id) %><br>
      <%= link_to "Edit", edit_user_path(@user) %>
    </section>
    <% sch = (@user.school.eql?("Other Venue") || @user.school_id==1) ? "with no school" : "at #{@user.school}" %>
    <%= "#{@user.role.humanize} #{sch}" %><br>
    <%= @user.home_address.to_s+", "+@user.home_postcode.to_s %>
  </aside>
</div>
<div class="user_info">
  <h4>About Me</h4>
  <% if @user.about.blank? %>
    <% if current_user.id == @user.id %>
      <p><%= link_to "Add something about you!", edit_user_path(@user) %></p>
    <% else %>
      <p>No information yet.</p>
    <% end %>
  <% else %>
    <p><%= @user.about %></p>
  <% end %>
  <h4>Interests and hobbies</h4>
  <p><%= @user.interests %></p>
  <h4>Diary</h4>
  <ul class="generic-list">
  <%= render @user.diary_entries %>
  </ul>
  <h4>Favourites:</h4>
  <ul class="generic-list">
  <%= render @user.events %>
  </ul>
</div>
