<%= form_tag users_path, method: 'get', id: "user_search" do %>
  <p>
    <%= label_tag :name_search, "Name" %>
    <%= text_field_tag :name_search, params[:name_search] %>
    <% if admin? %>
      <%= label_tag :school_search, "School" %>
      <%= text_field_tag :school_search, params[:school_search], disabled: !(admin?), value: current_user.school %>
    <% end %>
    <%= submit_tag "Search", name: nil, class: "btn" %>
  </p>
<% end %>
