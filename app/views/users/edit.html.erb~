<% provide(:title, "Edit user") %>
<% provide(:site_section, "2") %>
<h1>Update profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :school %>
      <%= f.select :school, ["None", "Dagenham Park CoS", "Westminster Academy"] %>

      <%= f.label :home_address %>
      <%= f.text_field :home_address %>

      <%= f.label :home_postcode %>
      <%= f.text_field :home_postcode %>
<br>
      <% if can? :update, @user %>

        <%= f.label :role %>
        <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>

        <%= f.check_box :mentor %>
        <%= f.label :mentor, "Teacher/parent" %>

        <%= f.check_box :organiser %>
        <%= f.label :organiser, "Event organiser" %>
        
        <%= f.check_box :admin %>
        <%= f.label :mentor, "Administrator (careful!)" %>
        
      <% end %>

      <% if current_user.id == @user.id %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>

      <% end %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
