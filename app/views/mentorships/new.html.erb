<%= form_tag new_mentorship_path, method: 'get', id: "user_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= hidden_field :school, value: current_user.school %>
    <%= submit_tag "Search", name: nil, class: "btn" %>
  </p>
<% end %>

<div id="user_results">
  <%= render "user_results" %>
</div>
