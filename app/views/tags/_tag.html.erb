<% if withnames %>
  <%= link_to tag do %>
  <li class="tag_wrapper">
      <span class="tag_name">
        <%= tag.name %>
      </span>
      <%= image_tag("/tag_icons/large/#{tag.name}.png", size: "#{width}x#{width}", alt: tag.name) %>
  </li>
  <% end %>
<% else %>
  <li class="tag_thumbnail">
    <%= link_to image_tag("/tag_icons/large/#{tag.name}.png", size: "#{width}x#{width}", alt: tag.name), tag %>
  </li>
<% end %>
