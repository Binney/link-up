  <div class="navbar-inner">
    <div class="container">
      <%= link_to "link up", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
              <li><%= link_to current_user.name, user_path(current_user.id) %></li>
